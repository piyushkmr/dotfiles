{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": false,
    "max-line-length": [true, 140],
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "member-access": false,
    "member-ordering": [true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "object-literal-sort-keys": false,
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case"],
//    comment following line to disable unused variable check because of https://github.com/Microsoft/TypeScript/issues/19700
//    will update this in future.
//    "no-unused-variable": [true, "check-parameters", {"ignore-pattern": "^_"}],
    "ordered-imports": false,
    "no-var-requires": false,
    "no-console": false,
    "no-bitwise": false,
    "array-type": [true, "array"],
    "ban": [true, "fit", "fdescribe"],
    "import-spacing": false,
    "no-trailing-whitespace": [true, "ignore-comments", "ignore-template-strings"]
  },
  "jsRules": { // copied from "rules" until https://github.com/palantir/tslint/pull/3641 gets merged
    "interface-name": false,
    "max-line-length": [true, 140],
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "member-access": false,
    "member-ordering": [true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "object-literal-sort-keys": false,
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case"],
    "ordered-imports": false,
    "no-var-requires": false,
    "no-bitwise": false,
    "ban": [true, "fit", "fdescribe"],
    "import-spacing": false,
    "no-trailing-whitespace": [true, "ignore-comments", "ignore-template-strings"]
  }
}
